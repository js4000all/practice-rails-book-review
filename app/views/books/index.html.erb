<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">書籍一覧</h1>
    <%= link_to '新規登録', new_book_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>

  <% if notice %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
      <span class="block sm:inline"><%= notice %></span>
    </div>
  <% end %>

  <div class="bg-white shadow-md rounded my-6">
    <table class="min-w-full">
      <thead>
        <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
          <th class="py-3 px-6 text-left">タイトル</th>
          <th class="py-3 px-6 text-left">著者</th>
          <th class="py-3 px-6 text-left">出版社</th>
          <th class="py-3 px-6 text-left">出版年</th>
        </tr>
      </thead>
      <tbody class="text-gray-600 text-sm font-light">
        <% @books.each do |book| %>
          <tr class="border-b border-gray-200 hover:bg-gray-100">
            <td class="py-3 px-6 text-left whitespace-nowrap"><%= book.title %></td>
            <td class="py-3 px-6 text-left"><%= book.author %></td>
            <td class="py-3 px-6 text-left"><%= book.publisher %></td>
            <td class="py-3 px-6 text-left"><%= book.published_year %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
